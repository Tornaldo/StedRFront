<Alloy>
	<!-- This is the view that holds two tabs; one for content from digitalt fortalt, and the other for twitter -->
	<TabGroup>
		<Tab id="storyTab" icon="images/digitaltfortaltlogo.png" >
			<Window class="container" layout="vertical" exitOnClose="true" navBarHidden="true">
				<View id="mediaGalleryView" height="50%">
					<!-- Story media -->
				</View>
				<ScrollView layout="vertical" backgroundColor="#40B0D2">
					<Label id="storyTitle" ></Label>
					<Label id="subTitle"></Label>
					<Label id="storyText"></Label>
					<Label id="storyAuthor"></Label>
					<View id="tagView" layout="vertical"></View>
				</ScrollView>
			</Window>
		</Tab>
		<Tab id="commentTab" icon="images/twitterlogo.png" backgroundColor="#8D8D8D" backgroundSelectedColor="#40B0D2">
			<Window id="twitterWin" navBarHidden="true" exitOnClose="true">
				<View id="twitterView"></View>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>