<Alloy>
	<!-- Need to declare navBarHidden, so it becomes a heavy weight window that can capture back event -->
	<Window class="container" layout="vertical" exitOnClose="false" navBarHidden="false">
		<View id="wallPictureView" height="50%">
			<ScrollableView id="mediaScrollerMainImage" showPagingControl="true" ></ScrollableView>
			<!-- <ImageView width="Ti.UI.FILL" id="wallImageView" ></ImageView> -->
		</View>
		<View id="storyAndPictureView" layout="vertical" height="50%" width="Ti.UI.Fill">
			<View id="tabView" layout="horizontal" height="15%">
				<Button id="pictureTab" title="Bilder" ></Button>
				<Button id="storyTab" title="Historier"></Button>
			</View>
			<View id="storyOrPictureView" height="85%"></View>
		</View>
	</Window>
</Alloy>