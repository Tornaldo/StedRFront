<Alloy>
	<!-- Need to declare navBarHidden, so it becomes a heavy weight window that can capture back event -->
	<Window class="container" layout="vertical" exitOnClose="false" navBarHidden="false">
		<View id="pictureGallery" height="50%">
			<!-- Wall pictures -->
			<!-- <Require src="pictureGallery" id="pictureGallery"></Require> -->
		</View>
		<View id="storyAndPictureView" layout="vertical" height="50%">
			<View id="labelView" layout="horizontal" height="10%">
				<Label id="pictureTab" text="Bilder" touchEnabled="true"></Label>
				<Label id="storyTab" text="Historier" touchEnabled="true"></Label>
			</View>
			<View id="storyOrPictureView" height="90%"></View>
		</View>
	</Window>
</Alloy>