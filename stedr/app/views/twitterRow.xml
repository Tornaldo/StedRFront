<Alloy>
	<!-- The view for the twitter rows -->
	<TableView id="tableView" dataCollection="tweets" dataTransform="transformFunction" class="twittertable">
		<TableViewRow onClick="showTweet" class="twitterStatus">
			<ImageView class="twitterImage" image="{profileImage}" />
			<View class="nameView" layout="horizontal">
				<Label class="twitterName" text="{userName}" />
				<Label class="screenName" text="{screenName}"></Label>
			</View>
			<Label class="twitterText" text="{text}" />
			<Label class="created" text="{created}"></Label>
		</TableViewRow>
	</TableView>
</Alloy>