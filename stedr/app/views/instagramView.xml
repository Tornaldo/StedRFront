<Alloy>
	<!-- a simple window for displaying a image and a label -->
	<Window class="container" layout="vertical" exitOnClose="false" navBarHidden="false">
		<View id="pictureView">
			<ImageView id="instagramPicture"></ImageView>
		</View>
		<Label id="userName"></Label>
		<View id="hei" layout="horizontal">
			<ImageView id="likesicon" image="/images/instagramlikesicon.png"></ImageView>
			<Label id="numberoflikeslabel"></Label>
			<ImageView id="commentsicon" image="/images/instagramcommentsicon.png"></ImageView>
			<Label id="numberofcommentslabel"></Label>
		</View>
		<View id="hei2">
			<Label id="caption"></Label>
		</View>
	</Window>
</Alloy>